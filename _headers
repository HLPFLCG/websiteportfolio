# Security Headers for Cloudflare Pages

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://unpkg.com https://cdn.jsdelivr.net https://sites.super.myninja.ai; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://unpkg.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://formspree.io; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://formspree.io;
  
  # HTTPS Redirect
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Cache Control for Static Assets
/src/css/*
  Cache-Control: public, max-age=31536000, immutable

/src/js/*
  Cache-Control: public, max-age=31536000, immutable

/favicons/*
  Cache-Control: public, max-age=31536000, immutable

# Cache Control for HTML
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Cache Control for Root
/
  Cache-Control: public, max-age=3600, must-revalidate